<header style="background-image: url(/img/<%- bg %>)" class="pt-5">
    <div class="container">
        <div class="col-md-6 col-sm-9">
            <h1 class="mb-3"><%- title %></h1>
            <p class="mb-0"><%- subtitle %></p>
            <h5 class="mt-3"><%- btn_title %></h5>
            <a href="<%- offerLink %>" class="btn_hp_gradient_orange"><%- gettext("Get started now") %></a>
            <div class="brands d-block mt-3">
                <div class="d-inline-block mr-4"><img src="/img/brand_logo_pcmag.png" alt="pcmag"></div>
                <div class="d-inline-block mr-4"><img src="/img/brand_logo_editor_choice.png" alt="editor choice"></div>
                <div class="d-inline-block"><img src="/img/brand_logo_cnet.png" alt="cnet"></div>
            </div>
            <div class="discount_badge">
                -<b><%- prices.blocks[1].discount %></b>
                <span>%</span>
            </div>
        </div>
    </div>
</header>
