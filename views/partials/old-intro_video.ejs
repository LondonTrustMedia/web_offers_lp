<section id="intro_video">
    <div class="container text-center">
        <h3 class="hp"><%- gettext('Watch our 1 minute intro video') %></h3>
        <a id="video_btn" class="d-inline-block" data-toggle="modal" data-target="#video_modal">
            <img src="/img/intro_video.jpg" alt="Click to play">
        </a>
        <div class="modal fade" id="video_modal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-body m-0 p-0">
                        <div class="embed-responsive embed-responsive-16by9 z-depth-1">
                            <iframe class="embed-responsive-item" width="100%" height="480" frameborder="0" allowfullscreen aria-hidden="true"></iframe>
                        </div>
                        <br><br>
                        <h6 id="x">[x] <%- gettext('click anywhere to close') %></h6>
                    </div>
                </div>
            </div>
        <div>
</section>
<script>
    $('#video_btn').click(function () {
        var src = 'https://www.youtube.com/embed/SuD7aZQ4aq4?autoplay=1';
        $('#video_modal iframe').attr('src', src);
    });

    $('#video_modal').click(function (e) {
        if (!$("#video_modal").has(e.target).length){
            $('#video_modal iframe').removeAttr('src');
        }
    });
</script>