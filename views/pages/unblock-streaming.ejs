<html lang="<%= lang %>" dir="<%= lang_dir %>">

<head>
    <% include ../partials/head %>
    <link rel="stylesheet" href="<%= asset('css/unblock-streaming.css') %>">
    <link rel="stylesheet" href="https://use.typekit.net/syh7gcy.css">
</head>

    <body>
        <% include ../navbar/navbar_dark %>  
        <% include ../partials/expose_bar %>  
        <header class="color_white parallax_container">
            <% include ../navbar/header_bar %>  
            <div class="container">
                <div class="col-65">
                    <h1 class="mt-3 mb-0"><%- gettext('Best VPN for <b>streaming</b>') %></h1>
                    <h3 class="mb-0"><%- gettext("Private Internet Access<br>streamlines your internet") %></h3>
                    <div class="d-inline-block text-center">
                        <a href="<%- offerLink %>" class="btn_wave orange my-3 d-md-inline-block d-none"><%- gettext("Get Private Internet Access VPN") %></a>
                        <% include ../partials/discount_block %>
                    </div>
                    <div class="d-md-block text-left d-none">
                        <div class="text-center d-inline-block d-none">
                            <p><%- format(gettext("Try it risk free! <i class='fas fa-award'></i><span class='text-uppercase'> %s-day money back guarantee</span>"), [30]) %></p>
                            <% if (query.brand) { %>
                                <% include ../partials/brand %>
                            <% } else { %>
                                <div class="brands d-block">
                                    <div class="d-inline-block mr-4"><img src="img/brand_logo_pcmag.png" alt="pcmag"></div>
                                    <div class="d-inline-block mr-4"><img src="img/brand_logo_editor_choice.png" alt="editor choice"></div>
                                    <div class="d-inline-block"><img src="img/brand_logo_cnet_white.png" alt="cnet"></div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class="bg_container parallax">
                    <img src="img/streaming_LP_header_image.png" class="people">
                </div>
            </div>
            <div class="d-block d-md-none mobile_header">
                <div class="dark py-2">
                    <div class="container d-flex align-items-center">
                        <div class="mr-3">
                            <% if (query.brand) { %>
                                <% include ../partials/brand %>
                            <% } else { %>
                                <div class="brands d-block">
                                    <div class="d-inline-block mr-1"><img src="img/brand_logo_pcmag.png" alt="pcmag"></div>
                                    <div class="d-inline-block mr-1"><img src="img/brand_logo_editor_choice.png" alt="editor choice"></div>
                                    <div class="d-inline-block"><img src="img/brand_logo_cnet_white.png" alt="cnet"></div>
                                </div>
                            <% } %>
                        </div>
                        <div>
                            <p class="mb-0"><%- format(gettext("Try it risk free!<br><span class='text-uppercase'>%s-day money back guarantee</span>"), [30]) %></p>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <a href="<%- offerLink %>" class="btn_wave orange"><%- format(gettext("Private Internet Access VPN for %s% OFF"),[prices.blocks[1].discount]) %></a>
                </div>
            </div>
            <div class="corners"></div>
        </header>
        <% include ../partials/trusted_companies %>
        <section id="streaming_needs">
            <div class="container text-center">
                <div class="mb-5">
                    <h2 class="mb-0"><%- gettext("A must have for your streaming needs") %></h2>
                    <p class="my-5"><%- gettext("According to the Video Advertising Bureau (VAB), <b>over 71%</b> of internet users in the United States stream and watch video over the internet.<br>Online streaming services and websites are becoming more popular every day all over the world.<br><b>Don’t miss out on video streaming opportunities because of your location.</b>") %></p>
                    <a href="<%- offerLink %>" class="btn_wave orange my-3 d-md-inline-block d-none"><%- gettext("Sign up for Private Internet Access today!") %></a>
                </div>
                <div class="d-flex justify-content-md-between justify-content-center flex-md-row flex-column">
                    <div class="col-md-4">
                        <div><img src="img/pia_lockman/circle_box_pia_lockman_infinity.svg" alt="Infinity"></div>
                        <h5 class="my-2 text-uppercase"><%- gettext("Unlimited bandwidth for streaming") %></h5>
                        <p class="mb-0"><%- gettext("Private Internet Access has no logs and does not throttle users") %></p>
                    </div>
                    <div class="col-md-4">
                        <div><img src="img/pia_lockman/circle_box_pia_lockman_devices.svg" alt="Devices"></div>
                        <h5 class="my-2 text-uppercase"><%- gettext("One click solution to bypass geographic restrictions") %></h5>
                        <p class="mb-0"><%- gettext("Once you have chosen the location you want to use the internet from, Private Internet Access will always be one click away.") %></p>
                    </div>
                    <div class="col-md-4">
                        <div><img src="img/pia_lockman/circle_box_pia_lockman_one_click.svg" alt="One click"></div>
                        <h5 class="my-2 text-uppercase"><%- gettext("Stream on multiple devices") %></h5>
                        <p class="mb-0"><%- gettext("One Private Internet Access subscription can be used on up to five devices simultaneously. Share Private Internet Access with your whole family!") %></p>
                    </div>
                </div>
            </div>
        </section>
        <section id="steps">
            <div class="container text-center">
                <h2><%- gettext("Four easy steps to stream with Private Internet Access") %></h2>
                <h3><%- gettext(Start streaming with Private Internet Access in minutes) %></h3>
                <div class="d-flex justify-content-md-between justify-content-center flex-md-row flex-column">
                    <div class="step">
                        <div class="circle">
                            <div class="num">1</div>
                        </div>
                        <p class="mb-0"><%- gettext("<b>Subscribe</b><br>to Private Internet Access") %></p>
                    </div>
                    <div class="arrow"><i class="fal fa-arrow-right"></i></div>
                    <div class="step">
                        <div class="circle">
                            <div class="num">2</div>
                        </div>
                        <p class="mb-0"><%- gettext("<b>Download</b><br>Private Internet Access") %></p>
                    </div>
                    <div class="arrow"><i class="fal fa-arrow-right"></i></div>
                    <div class="step">
                        <div class="circle">
                            <div class="num">3</div>
                        </div>
                        <p class="mb-0"><%- gettext("<b>Login</b><br>on the Private Internet Access client with your username and password") %></p>
                    </div>
                    <div class="arrow"><i class="fal fa-arrow-right"></i></div>
                    <div class="step">
                        <div class="circle">
                            <div class="num">4</div>
                        </div>
                        <p class="mb-0"><%- gettext("<b>Turn on</b><br>Private Internet Access and connect to the location of your choice") %></p>
                    </div>
                    <div class="arrow"><i class="fal fa-arrow-right"></i></div>
                </div>
                <h2 class="text-uppercase"><%- gettext("You’re ready to start streaming with <span>Private Internet Access</span>") %></h2>
            </div>
        </section>
        <% include ../partials/tag_manager %>
        <script src="<%= asset('js/trust.js') %>"></script>
    </body>

</html>