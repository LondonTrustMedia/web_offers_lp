<html lang="<%= lang %>" dir="<%= lang_dir %>" currency="<%= currency.iso %>">

<head>
    <% include ../partials/head %>
    <link rel="stylesheet" href="<%= asset('css/youtube.css') %>">
</head>

    <body>
        <% include ../navbar/navbar_dark %>  
        <% include ../partials/expose_bar %>  
        <header class="color_white parallax_container">
            <% include ../navbar/header_bar %>  
            <div class="container">
                <div class="col-65">
                    <h1 class="mt-3 mb-0"><%- format(gettext('The VPN recommended by<br><b>%s</b>'),["<img src=\"https://nitool.s3.amazonaws.com/logos/" + escape(query.channel) + ".png\" alt=\"" + query.channel + "\" onerror=\"this.parentElement.innerHTML ='" + query.channel + "\'\">"]) %></h1>
                    <div class="d-inline-block text-center position-relative">
                        <% include ../partials/price_block %>
                        <div class="d-none d-md-block">
                            <% include ../partials/b2mfree_new %>
                        </div>
                        
                        <a href="<%- offerLink %>" class="btn_wave orange my-3 d-md-inline-block d-none"><%- format(gettext("Save %s% Now"),[prices.blocks[1][currency.iso].discount]) %></a>
                        <div class="d-flex d-md-block align-items-center">
                            <div class="d-inline-block d-md-none">
                                <% include ../partials/b2mfree_new %>
                            </div>
                            <h5 class="mb-md-4 mb-0 text-md-left sign"><%- format(gettext("Sign-up now & get %s extra months <span class='text-uppercase'>free</span>"),[2]) %></h5>
                        </div>
                    </div>
                    <div class="d-md-block text-left d-none">
                        <div class="text-center d-inline-block d-none">
                            <p class="font-weight-light"><%- format(gettext("Try it risk free! <i class='fas fa-award'></i><span class='text-uppercase'> %s-day money back guarantee</span>"), [30]) %></p>
                            <% if (query.brand) { %>
                                <% include ../partials/brand %>
                            <% } else { %>
                                <div class="brands d-block">
                                    <div class="d-inline-block mr-4"><img src="img/brand_logo_pcmag.png" alt="pcmag"></div>
                                    <div class="d-inline-block mr-4"><img src="img/brand_logo_editor_choice.png" alt="editor choice"></div>
                                    <div class="d-inline-block"><img src="img/brand_logo_cnet_white.png" alt="cnet"></div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="bg_container parallax d-md-block">
                    <img src="img/youtube_LP_header_window.png" alt="header" class="header desktop">
                    <img src="img/youtube_LP_tab_header_window.png" alt="header" class="header ipad">
                    <img src="img/youtube_LP_mobi_header_window.png" alt="header" class="header mobi">
                    <% if (query.channel && channels.includes(query.channel.toLowerCase())) { %> 
                        <img src="img/youtube-channels/<%- query.channel.toLowerCase().replace(/ /g, "_") %>.jpg" alt="<%- query.channel %>" class="image desktop">
                        <img src="img/youtube-channels/<%- query.channel.toLowerCase().replace(/ /g, "_") %>_tablet.jpg" alt="<%- query.channel %>" class="image ipad">
                        <img src="img/youtube-channels/<%- query.channel.toLowerCase().replace(/ /g, "_") %>_mobile.jpg" alt="<%- query.channel %>" class="image mobi">
                    <% } else { %>
                        <img src="img/youtube-channels/default.jpg" alt="default bg" class="image desktop">
                        <img src="img/youtube-channels/default_tablet.jpg" alt="default bg" class="image ipad">
                        <img src="img/youtube-channels/default_mobile.jpg" alt="default bg" class="image mobi">
                    <% } %>  
                </div>
            </div>
            <div class="d-block d-md-none mobile_header">
                <div class="dark py-2">
                    <div class="container d-flex align-items-center text-sm-left text-center flex-sm-row flex-column-reverse">
                        <div class="mr-3">
                            <% if (query.brand) { %>
                                <% include ../partials/brand %>
                            <% } else { %>
                                <div class="brands d-block">
                                    <div class="d-inline-block mr-1"><img src="img/brand_logo_pcmag.png" alt="pcmag"></div>
                                    <div class="d-inline-block mr-1"><img src="img/brand_logo_editor_choice.png" alt="editor choice"></div>
                                    <div class="d-inline-block"><img src="img/brand_logo_cnet_white.png" alt="cnet"></div>
                                </div>
                            <% } %>
                        </div>
                        <div>
                            <p class="mb-md-0 mb-2"><%- format(gettext("Try it risk free!<br><span class='text-uppercase'>%s-day money back guarantee</span>"), [30]) %></p>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <a href="<%- offerLink %>" class="btn_wave orange"><%- format(gettext("Save %s% Now"),[prices.blocks[1][currency.iso].discount]) %></a>
                </div>
            </div>
            <div class="corners"></div>
        </header>
        <% include ../body/general %>
        <% include ../partials/tag_manager %>
        <script src="<%= asset('js/trust.js') %>"></script>
    </body>

</html>