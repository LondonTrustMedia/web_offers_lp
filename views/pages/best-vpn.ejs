<html lang="<%= lang %>" dir="<%= lang_dir %>">

<head>
    <% include ../partials/head %>
    <link rel="stylesheet" href="<%= asset('css/best-vpn.css') %>">
    <link rel="stylesheet" href="https://use.typekit.net/syh7gcy.css">
</head>

    <body>
        <% include ../navbar/navbar_dark %>  
        <% include ../partials/expose_bar %>  
        <header class="color_white parallax_container">
            <style>
                @media screen and (max-width: 767px) {
                    header {
                        background-image: url(img/best/mobile/piaMOBIflag_<%- bestGeo.code.toLowerCase() %>.jpg?v2); 
                    }
                }
            </style>
            <% include ../navbar/header_bar %>  
            <div class="container content">
                <div class="col-65">
                    <h1 class="mt-3 mb-0">
                        <%- format(gettext('Rated as the Best VPN Service In<br><b><span class="color_pia_light_orange">%s</span></b>'),[bestGeo.text]) %></h1>
                    <div class="d-md-inline-block text-center d-none">
                        <div class="my-3 text-center d-block color_white">
                            <p class="mb-0 d-inline-block"><%- gettext("No Logs") %></p>
                            <i class="fas fa-star color_pia_light_orange mx-2 d-inline-block"></i>
                            <p class="mb-0 d-inline-block"><%- gettext("Military-Grade Encryption") %></p>
                            <i class="fas fa-star color_pia_light_orange mx-2 d-inline-block"></i>
                            <p class="mb-0 d-inline-block"><%- format(gettext("%s Devices"),[10]) %></p>
                        </div>
                        <a href="<%- offerLink %>" class="btn_wave orange my-3"><%- gettext("Get Private Internet Access VPN") %></a>
                        <% include ../partials/discount_block %>
                    </div>
                    <div class="d-md-block text-left d-none">
                        <div class="text-center d-inline-block">
                            <p><%- format(gettext("Try it risk free! <i class='fas fa-award'></i><span class='text-uppercase'> %s-day money back guarantee</span>"), [30]) %></p>
                            <% if (query.brand) { %>
                                <% include ../partials/brand %>
                            <% } else { %>
                                <div class="brands d-block">
                                    <div class="d-inline-block mr-4"><img src="img/brand_logo_pcmag.png" alt="pcmag"></div>
                                    <div class="d-inline-block mr-4"><img src="img/brand_logo_editor_choice.png" alt="editor choice"></div>
                                    <div class="d-inline-block"><img src="img/brand_logo_cnet_white.png" alt="cnet"></div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    <div class="d-block d-md-none">
                        <% include ../partials/discount_block %>
                    </div>
                    <div class="text-left d-block color_white d-md-none pam">
                        <p class="mb-0 d-inline-block"><%- gettext("No Logs") %></p>
                        <i class="fas fa-star color_pia_light_orange mx-2 d-inline-block"></i>
                        <p class="mb-0 d-inline-block"><%- gettext("Military-Grade Encryption") %></p>
                        <i class="fas fa-star color_pia_light_orange mx-2 d-inline-block"></i>
                        <p class="mb-0 d-inline-block"><%- format(gettext("%s Devices"),[10]) %></p>
                    </div>
                </div>
                <div class="bg_container parallax d-block">
                    <img src="img/best/piadskflag_<%- bestGeo.code.toLowerCase() %>.png" alt="<%- bestGeo.text %> flag" class="flag">
                    <img src="img/locations_LP_header_comp.png" alt="computer" class="computer">
                </div>
            </div>
            <div class="d-block d-md-none mobile_header">
                <div class="dark py-2">
                    <div class="container d-flex align-items-center">
                        <div class="mr-3">
                            <% if (query.brand) { %>
                                <% include ../partials/brand %>
                            <% } else { %>
                                <div class="brands d-block">
                                    <div class="d-inline-block mr-1"><img src="img/brand_logo_pcmag.png" alt="pcmag"></div>
                                    <div class="d-inline-block mr-1"><img src="img/brand_logo_editor_choice.png" alt="editor choice"></div>
                                    <div class="d-inline-block"><img src="img/brand_logo_cnet_white.png" alt="cnet"></div>
                                </div>
                            <% } %>
                        </div>
                        <div>
                            <p class="mb-0"><%- format(gettext("Try it risk free!<br><span class='text-uppercase'>%s-day money back guarantee</span>"), [30]) %></p>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <a href="<%- offerLink %>" class="btn_wave orange"><%- gettext("Get Private Internet Access VPN") %></a>
                </div>
            </div>
            <div class="corners"></div>
        </header>
        <% include ../body/general %>
        <% include ../partials/tag_manager %>
        <script src="<%= asset('js/trust.js') %>"></script>
    </body>

</html>