<section id="pricing" class="<%- event ? event.name : '' %>">
    <div class="container text-center">
        <h3 class="hp"><%- gettext('Risk Free. 7 day money back guarantee') %></h3>
        <h1><%- gettext('Limited Time Only! Act Now') %></h1>
        <div class="flex-pricing">
            <% prices.blocks.forEach((block, i) => { %>
                <a href="<%- offerLink %>" class="d-flex flex-column justify-content-between pricing-price <%- block.best ? 'best-price' : '' %>" data-text=" <%- block.best ? gettext('BEST VALUE') : '' %>">
                    <div class="title">
                        <% if (block.months % 12 !== 0) { %>
                            <% if (block.months === 1) { %>
                                <h5 class="pricing-duration"><%- gettext('Monthly') %></h5>
                            <% } else { %>
                                <h5 class="pricing-duration"><%- block.months %>&nbsp;<%- gettext('Months') %></h5>
                            <% } %>
                        <% } else { %>
                            <% if (block.months === 12) { %>
                                <h5 class="pricing-duration"><%- gettext('Yearly') %></h5>
                            <% } else { %>
                                <h5 class="pricing-duration"><%- block.months/12 %>&nbsp;<%- gettext('Years') %></h5>
                            <% } %>
                        <% } %>
                    </div>
                    <div class="pricing_container">
                        <% if (block.discount) { %>
                            <h3 class="pricing-save"><%- format(gettext('SAVE %s%'), [block.discount]) %></h3>
                        <% } %>
                        <div class="pricing-bill">
                            <span class="price-currency"><%- currency.symbol %></span><%- block[currency.iso].perMonthNumber %>
                            <span class="month"><%- gettext('/mo') %></span>
                        </div>
                        <div class="pricing-every">
                            <% if (block.months % 12 !== 0) { %>
                                <% if (block.months === 1) { %>
                                    <%- format(gettext('<span class="text-danger font-weight-bold"><del>%s</del></span> %s per month'), [oldPrices.blocks[i][currency.iso] == block[currency.iso].total ? '' : oldPrices.blocks[i][currency.iso], block[currency.iso].total]) %>
                                <% } else { %>
                                    <%- format(gettext('<span class="text-danger font-weight-bold"><del>%s</del></span> %s per %s months'), [oldPrices.blocks[i][currency.iso] == block[currency.iso].total ? '' : oldPrices.blocks[i][currency.iso], block[currency.iso].total, block.months]) %>
                                <% } %>
                            <% } else { %>
                                <% if (block.months === 12) { %>
                                    <%- format(gettext('<span class="text-danger font-weight-bold"><del>%s</del></span> %s per year'), [oldPrices.blocks[i][currency.iso], block[currency.iso].total]) %>
                                <% } else { %>
                                    <%- format(gettext('<span class="text-danger font-weight-bold"><del>%s</del></span> %s per %s years'), [oldPrices.blocks[i][currency.iso], block[currency.iso].total, block.months/12]) %>
                                <% } %>
                            <% } %>
                        </div>
                        <div class="btn_hp_gradient_orange container-fluid"><%- gettext('Sign up now') %></div>
                        <% if (block.best) { %>
                            <% if (event && event.coupon) { %>
                                <img src="img/<%- event.name %>_bestprices.png" alt="<%- event.name %>" class="bestprice_img" onerror="this.style.display='none'">
                            <% } %>
                        <% } %>
                    </div>
                </a>
            <% }) %>
        </div>
        <div class="currency-alert">*<%- format(gettext('All amounts are shown in %s, and any discounts reflect a reduction based on the current monthly service pricing at %s per month'), [currency.symbol, prices.blocks[0][currency.iso].perMonthNumber]) %></div>
    </div>
</section>