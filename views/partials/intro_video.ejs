<section id="intro_video">
    <div class="container text-center">
        <h3 class="new_title"><%- gettext('Watch our 1 minute intro video') %></h3>
        <a id="video_btn" class="d-inline-block position-relative">
            <img src="/img/intro_video2.jpg" alt="Click to play">
            <div class="video">
                <iframe class="embed-responsive-item" width="100%" height="100%" frameborder="0" allowfullscreen
                    src = 'https://www.youtube.com/embed/SuD7aZQ4aq4'></iframe>
            </div>
        </a>
        <a href="<%- offerLink %>" class="btn_pia orange"><%- gettext("Get started now") %></a>
</section>
<script>
    $('#video_btn').click(function () {
        $("#video_btn .video").addClass("active");
        $("#video_btn img").addClass("active");
        $("#video_btn iframe").attr("src", 'https://www.youtube.com/embed/SuD7aZQ4aq4?autoplay=1');
    });
</script>